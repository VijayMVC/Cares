@{
    ViewBag.Title = "Index";
}
<div class="row" id="OrgGroupBinding">
   
    <div class="row " data-bind="visible: !isOrgGroupEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">Organization Group</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateOrgGroupForm" title="Create New Org Group">NEW</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="Show Filters" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isOrgGroupEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">

                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Org Group Code>" data-bind="value: orgGroupCodeFilter" />
                </div>
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Org Group Name>" data-bind="value: orgGroupNameFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="Hide Section"></a>
            </form>
        </div>
    </div>

    <div class="row searchFilterResultSection" data-bind="visible: !isOrgGroupEditorVisible()">
        <div class="well">
            <table id="OrgGroupTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="Orgcode"> <span id="1">Code<span class="icon-up"></span></span></th>
                        <th class="Orgname"> <span id="2">Name<span></span></span></th>
                        <th> <span id="3">Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'OrgGroupFilterResultTemplate' , foreach: organizationGroups } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionOrgGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteOrgGroup" title="Delete Fleet Pool"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionOrgRoupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditFleetPool" title="Edit in Form"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="OrgGroupFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionOrgRoupTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionOrgGroupTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_OrgGroupEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["OrganizationGroup/OrganizationGroup.view", "common/confirmation.view"]);
    </script>

}
