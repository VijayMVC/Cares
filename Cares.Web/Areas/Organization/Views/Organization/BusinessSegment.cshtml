@{
    ViewBag.Title = Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentLabel;
}
<div class="row" id="BusinessSegmentBinding">

    <div class="row " data-bind="visible: !isBusinessSegmentEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isBusinessSegmentEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.Organization.WorkplaceType.Search+">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isBusinessSegmentEditorVisible()">
        <div class="well">
            <table id="BusinessSegmentTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="BScode"> <span id="1">@Cares.Web.Resources.Organization.BusinessSegment.Code<span class="icon-up"></span></span></th>
                        <th class="BSname"> <span id="2">@Cares.Web.Resources.Organization.BusinessSegment.Name<span></span></span></th>
                        <th class="BSDes"> <span id="3">@Cares.Web.Resources.Organization.BusinessSegment.Description<span></span></span></th>

                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'BusinessSegmentFilterResultTemplate' , foreach: businessSegments } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionBusinessSegmentTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeletItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionBusinessSegmentTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="BusinessSegmentFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionBusinessSegmentTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionBusinessSegmentTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_BusinessSegmentEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["businessSeg/businessSeg.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.BusinessSegmentSaveSuccessMessage = '@Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentSaveSuccessMessage';
        ist.resourceText.BusinessSegmentSaveFailError = '@Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentSaveFailError';
        ist.resourceText.BusinessSegmentLoadFailError = '@Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentLoadFailError';
        ist.resourceText.BusinessSegmentDeleteSuccessMessage = '@Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentDeleteSuccessMessage';
        ist.resourceText.BusinessSegmentDeleteFailError = '@Cares.Web.Resources.Organization.BusinessSegment.BusinessSegmentDeleteFailError';
        </text>
       }
    </script>

}
