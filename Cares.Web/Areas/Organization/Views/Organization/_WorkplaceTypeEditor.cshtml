
<div class="well col-md-12" id="WorkPlaceTypeEditor" data-bind="visible: isWorkPlaceTypeEditorVisible, with: selectedWorkPlaceType " style="display: none; margin-top:15px">
    <div class="float-left detailsContainer">
        <h3 class="page-header detailsHeaderSection float-left">@Cares.Web.Resources.Organization.WorkplaceType.WorkplaceTypeDetail</h3>
        <button class="btn  btn-info"  data-bind="click: $root.onSavebtn">@Cares.Web.Resources.Shared.Common.Save</button>
        <button class="btn  btn-default"  data-bind="click: $root.onCancelbtn">@Cares.Web.Resources.Shared.Common.Cancel</button>
    </div>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label h5 col-sm-2">@Cares.Web.Resources.Organization.WorkplaceType.Code*</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.Organization.WorkplaceType.Code+">")"  data-bind="value: code" />
            </div>
            <label class="control-label h5 col-sm-1">@Cares.Web.Resources.Organization.WorkplaceType.Name*</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.Organization.WorkplaceType.Name+">")"  data-bind="value:name" />
            </div>

        </div>
        <div class="form-group">
            <label class="control-label h5 col-sm-2">@Cares.Web.Resources.Organization.WorkplaceType.WorkPlaceNature*</label>
            <div class="col-md-3">
                <select class="form-control" data-bind="options: $root.baseWorkplaceNatureList, optionsCaption: '&lt;' + '@Cares.Web.Resources.Organization.WorkplaceType.WorkPlaceNature'+ '&gt;', value:workplaceNature "></select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label h5 col-sm-2">@Cares.Web.Resources.Organization.WorkplaceType.Description</label>
            <div class="col-md-3">
                <textarea class="form-control" rows="4" placeholder="@("<"+Cares.Web.Resources.Organization.WorkplaceType.Description+">")"  data-bind="value: description"></textarea>
            </div>
        </div>

    </form>
</div>
