@{
    ViewBag.Title = "Company";
}
<div class="row" id="companyBinding">
    <div class="row " data-bind="visible: !isCompanyEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">Company</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateCompany" title="Create New Tariff">NEW</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="Show Filters" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isCompanyEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">

                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="<Company Code>" data-bind="value:companyCodeTextFilter" />
                </div>

                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="<Company Name>" data-bind="value:companyNameTextFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.orgGroupList, optionsText: 'OrgGroupName', optionsValue: 'OrgGroupId', optionsCaption: '<Org Group>', value: orgGroupFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.businessSegList, optionsText: 'BusinessSegmentCodeName', optionsValue: 'BusinessSegmentId', optionsCaption: '<Business Segment>', value: busiNessSegmentFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: onSearch">Search</button>
                <button type="submit" class="btn btn-default" data-bind="click: onReset">Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title="Hide Section"></a>
            </form>
        </div>
    </div>

    <div class="row searchFilterResultSection" data-bind="visible: !isCompanyEditorVisible()">
        <div class="well">
            <table id="CompanyTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">Code<span class="icon-up"></span></span></th>
                        <th> <span id="2">Name<span></span></span></th>
                        <th> <span id="3">Description<span></span></span></th>
                        <th> <span id="4">Organization Group<span></span></span></th>
                        <th> <span id="5">Business Segment<span></span></span></th>
                        <th> <span id="6">Parent Company<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'companyFilterResultTemplate' , foreach: companies } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionCompanyTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteCompany" title="Delete Fleet Pool"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionCompanyTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditCompany" title="Edit in Form"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="companyFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: companyCode"></td>
            <td data-bind="text: companyName"></td>
            <td data-bind="text: companyDescription"></td>
            <td data-bind="text: orgGroupName"></td>
            <td data-bind="text: businessSegmentName"></td>
            <td data-bind="text: parentCompanyName"></td>
            <td>
                <!-- ko template: { name: 'editActionCompanyTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionCompanyTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_CompanyEditor")

</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
