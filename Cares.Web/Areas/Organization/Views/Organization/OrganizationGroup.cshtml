@{
    ViewBag.Title = Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupLabel;
}
<div class="row" id="OrgGroupBinding">

    <div class="row " data-bind="visible: !isOrgGroupEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateOrgGroupForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isOrgGroupEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupCode+">")" data-bind="value: orgGroupCodeFilter" />
                </div>
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupName+">")" data-bind="value: orgGroupNameFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isOrgGroupEditorVisible()">
        <div class="well">
            <table id="OrgGroupTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">@Cares.Web.Resources.Organization.OrganizationGroup.Code<span class="icon-up"></span></span></th>
                        <th> <span id="2">@Cares.Web.Resources.Organization.OrganizationGroup.Name<span></span></span></th>
                        <th> <span id="3">@Cares.Web.Resources.Organization.OrganizationGroup.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'OrgGroupFilterResultTemplate' , foreach: organizationGroups } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionOrgGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteOrgGroup" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionOrgRoupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditFleetPool" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="OrgGroupFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionOrgRoupTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionOrgGroupTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_OrgGroupEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
    require(["Organization/organizationGroup.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.OrganizationGroupSaveSuccessMessage = '@Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupSaveSuccessMessage';
        ist.resourceText.OrganizationGroupSaveFailError = '@Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupSaveFailError';

        ist.resourceText.OrganizationGroupLoadFailError = '@Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupLoadFailError';

        ist.resourceText.OrganizationGroupDeleteSuccessMessage = '@Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupDeleteSuccessMessage';
        ist.resourceText.OrganizationGroupDeleteFailError = '@Cares.Web.Resources.Organization.OrganizationGroup.OrganizationGroupDeleteFailError'; 
        </text>
    }
</script>

}
