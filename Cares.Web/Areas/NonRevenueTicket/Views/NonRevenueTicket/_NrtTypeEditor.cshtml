
<div class="well col-md-12" id="NrtTypeEditor" data-bind="visible: isNrtTypeEditorVisible, with: selectedNrtType " style="display: none; margin-top:15px">
    <div class="float-left detailsContainer">
        <h3 class="page-header detailsHeaderSection float-left">@Cares.Web.Resources.NonRevenueTicket.NrtType.NrtTypeDetail</h3>
        <button class="btn  btn-info"  data-bind="click: $root.onSavebtn">@Cares.Web.Resources.Shared.Common.Save</button>
        <button class="btn  btn-default"  data-bind="click: $root.onCancelbtn">@Cares.Web.Resources.Shared.Common.Cancel</button>
    </div>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label h5 col-sm-2">@Cares.Web.Resources.NonRevenueTicket.NrtType.Code*</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.NonRevenueTicket.NrtType.Code + ">")" data-bind="value: code" />
            </div>
            <label class="control-label h5 col-sm-1">@Cares.Web.Resources.NonRevenueTicket.NrtType.Name*</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.NonRevenueTicket.NrtType.Name + ">")" data-bind="value:name" />
            </div>
            
        </div>
        <div class="form-group">
            <label class="control-label h5 col-sm-2">@Cares.Web.Resources.NonRevenueTicket.NrtType.VehicleStatus*</label>
            <div class="col-md-3">
                <select class="form-control" data-bind="options: $root.baseVehicleStatusList, optionsText: 'VehicleStatusCodeName', optionsValue: 'VehicleStatusId', optionsCaption: '&lt;' + '@Cares.Web.Resources.NonRevenueTicket.NrtType.VehicleStatus'+ '&gt;' , value:vehicleStatusId "></select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label h5 col-sm-2">@Cares.Web.Resources.NonRevenueTicket.NrtType.Description</label>
            <div class="col-md-3">
                <textarea class="form-control" rows="4" placeholder="@("<" + Cares.Web.Resources.NonRevenueTicket.NrtType.Description + ">")" data-bind="value: description"></textarea>
            </div>
        </div>

    </form>
</div>
