@{
    ViewBag.Title = Cares.Web.Resources.NonRevenueTicket.NrtType.NrtTypeLabel;
}
<div class="row" id="NrtTypeBinding">

    <div class="row " data-bind="visible: !isNrtTypeEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.NonRevenueTicket.NrtType.NrtTypeLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isNrtTypeEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.NonRevenueTicket.NrtType.Search + ">")" data-bind="value: searchFilter" />
                </div>
                <div class="col-md-3">
                    <select class="form-control" data-bind="options: $root.baseVehicleStatusList, optionsText: 'VehicleStatusCodeName', optionsValue: 'VehicleStatusId', optionsCaption: '&lt;' + '@Cares.Web.Resources.GeographicalHierarchy.SubRegion.RegionName'+ '&gt;' , value:baseVehicleStatusFilter "></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isNrtTypeEditorVisible()">
        <div class="well">
            <table id="OrgGroupTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="NrtTypeCode"> <span id="1">@Cares.Web.Resources.NonRevenueTicket.NrtType.Code<span class="icon-up"></span></span></th>
                        <th class="NrtTypeName"> <span id="2">@Cares.Web.Resources.NonRevenueTicket.NrtType.Name<span></span></span></th>
                        <th class="NrtTypeDes"> <span>@Cares.Web.Resources.NonRevenueTicket.NrtType.Description<span></span></span></th>
                        <th class="NrtTypeVehicleStatus"> <span id="3">@Cares.Web.Resources.NonRevenueTicket.NrtType.VehicleStatus<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'WorkplaceTypeFilterResultTemplate' , foreach: nrtTypes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionOrgGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionOrgRoupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="WorkplaceTypeFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td data-bind="text: vehicleStatusName"></td>
            <td>
                <!-- ko template: { name: 'editActionOrgRoupTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionOrgGroupTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_NrtTypeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["nRTType/nRTType.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.NrtTypeSuccessFullySavedMessage = '@Cares.Web.Resources.NonRevenueTicket.NrtType.NrtTypeSuccessFullySavedMessage';
        ist.resourceText.FailedToSaveNrtTypeError = '@Cares.Web.Resources.NonRevenueTicket.NrtType.FailedToSaveNrtTypeError';
        ist.resourceText.FailedToLoadNrtTypesError = '@Cares.Web.Resources.NonRevenueTicket.NrtType.FailedToLoadNrtTypesError';
        ist.resourceText.NrtTypeSuccessfullyDeletedMessage = '@Cares.Web.Resources.NonRevenueTicket.NrtType.NrtTypeSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteNrtTypeError = '@Cares.Web.Resources.NonRevenueTicket.NrtType.FailedToDeleteNrtTypeError';
        ist.resourceText.FailedToloadBaseDataError = '@Cares.Web.Resources.NonRevenueTicket.NrtType.FailedToloadBaseDataError';
        </text>
       }
    </script>

}
