@{
    ViewBag.Title = Cares.Web.Resources.EmployeeManagement.JobType.JobTypeLabel;
}
<div class="row" id="JobTypeBinding">

    <div class="row " data-bind="visible: !isCityEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.EmployeeManagement.JobType.JobTypeLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isCityEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.EmployeeManagement.JobType.Search+">")" data-bind="value: searchFilter" />
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isCityEditorVisible()">
        <div class="well">
            <table id="JobTypeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="JTcode"> <span id="1">@Cares.Web.Resources.EmployeeManagement.JobType.Code<span class="icon-up"></span></span></th>
                        <th class="JTname"> <span id="2">@Cares.Web.Resources.EmployeeManagement.JobType.Name<span></span></span></th>
                        <th class="JTdes"> <span>@Cares.Web.Resources.EmployeeManagement.JobType.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'JobTypeFilterResultTemplate' , foreach: jobTypes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionJobTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionJobTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="JobTypeFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionJobTypeTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionJobTypeTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_JobTypeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["jobType/jobType.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.JobTypeSuccessfullySavedMessage = '@Cares.Web.Resources.EmployeeManagement.JobType.JobTypeSuccessfullySavedMessage';
        ist.resourceText.JobTypeFailedToSaveError = '@Cares.Web.Resources.EmployeeManagement.JobType.JobTypeFailedToSaveError';
        ist.resourceText.JobTypeFailedToLoadError = '@Cares.Web.Resources.EmployeeManagement.JobType.JobTypeFailedToLoadError';
        ist.resourceText.JobTypeSuccessfullyDeletedMessage = '@Cares.Web.Resources.EmployeeManagement.JobType.JobTypeSuccessfullyDeletedMessage';
        ist.resourceText.JobTypeFailedToDeleteError = '@Cares.Web.Resources.EmployeeManagement.JobType.JobTypeFailedToDeleteError';
        </text>
       }
    </script>

}
