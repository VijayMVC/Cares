@{
    ViewBag.Title = "Insurance Rate";
}

<div class="row" id="insuranceRateBinding">
    <div class="row " data-bind="visible: !isInsuranceRtEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">Insurance Rate</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: createInsuranceRate" title=" create new Insurance Rate">NEW</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="Show Filters" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isInsuranceRtEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Search>" data-bind="value: searchFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.operations, optionsText: 'OperationCodeName', optionsValue: 'OperationId', optionsCaption: '<Operation>', value: operationFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.tariffTypes, optionsText: 'TariffTypeCodeName', optionsValue: 'TariffTypeId', optionsCaption: '<Tariff Types>', value: tariffTypeFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">Search</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title="Hide Section"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isInsuranceRtEditorVisible()">
        <div class="well">
            <table id="insuranceRateTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">Insurance Rate<br />Code<span class="icon-up"></span></span></th>
                        <th> <span id="2">Insurance Rate<br />Name<span></span></span></th>
                        <th> <span>Operation<span></span></span></th>
                        <th> <span>Tariff Type<span></span></span></th>
                        <th> <span id="5">Start Effective Date<span></span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'itemInsuranceRtMainTemplate' , foreach: insuranceRtMains } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="editActionInsuranceRtMainTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditInsuranceRate" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="deleteActionInsuranceRtMainTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteInsuranceRate" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>
    <script id="itemInsuranceRtMainTemplate" type="text/html">
        <tr>
            <td data-bind="text: insuranceRtMainCode"></td>
            <td data-bind="text: insuranceRtName"></td>
            <td data-bind="text: operationCodeName"></td>
            <td data-bind="text: tariffTypeCodeName"></td>
            <td data-bind="text: formattedStartDate"></td>
            <td>
                <!-- ko template: { name: 'editActionInsuranceRtMainTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionInsuranceRtMainTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_InsuranceRateEditor")

</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["insuranceRate/insuranceRate.view", "common/confirmation.view"]);

    </script>
}
