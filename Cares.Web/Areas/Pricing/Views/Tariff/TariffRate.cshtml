@{
    ViewBag.Title = "Index";
}

<div class="row" id="tariffRateBinding" >
    <div class="row " data-bind="visible: !isTariffRateEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">Tariff Rates</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: createTariffRate" title="Create New Tariff">NEW</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="Show Filters" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isTariffRateEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Search>" data-bind="value: searchFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.operations, optionsText: 'OperationCodeName', optionsValue: 'OperationId', optionsCaption: '<Operation>', value: operationFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.tariffTypes, optionsText: 'TariffTypeName', optionsValue: 'TariffTypeId', optionsCaption: '<Tariff Types>', value: tariffTypeFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">Search</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title="Hide Section"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isTariffRateEditorVisible()">
        <div class="well">
            <table id="tariffRateTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">Code<span class="icon-up"></span></span></th>
                        <th> <span id="2">Name<span></span></span></th>                                                
                        <th> <span id="6">Operation<span></span></span></th>
                        <th> <span id="7">Tariff Type<span></span></span></th>
                        <th> <span id="8">Start Effective Date<span></span></span></th>
                        <th> <span id="9">End Effective Date<span></span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'itemTariffRateTemplate' , foreach: tariffRates } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="editActionTariffRateTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditTariffRate" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="deleteActionTariffRateTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteTariffRate" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>
    <script id="itemTariffRateTemplate" type="text/html">
        <tr >
            <td data-bind="text: tariffRateCode"></td>
            <td data-bind="text: tariffRateName"></td>
            <td data-bind="text: operationCodeName"></td>
            <td data-bind="text: tariffTypeCodeName"></td>
            <td data-bind="text: formattedStartDate"></td>
            <td data-bind="text: formattedEndDate"></td>
            <td>
                <!-- ko template: { name: 'editActionTariffRateTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionTariffRateTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_TariffRateEditor")

</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["tariffRate/tariffRate.view", "common/confirmation.view"]);

    </script>
}
