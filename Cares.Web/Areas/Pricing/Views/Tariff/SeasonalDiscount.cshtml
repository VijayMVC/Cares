@{
    ViewBag.Title = @Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscountLabel;
}
<div class="row" id="seasonalDiscountBinding">
    <div class="row " data-bind="visible: !isSeasonalDiscountEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscounts</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: createSeasonalDiscount" title='@Cares.Web.Resources.Shared.Common.New'>@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title='@Cares.Web.Resources.Shared.Common.ShowFilter' style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isSeasonalDiscountEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder='@("<"+Cares.Web.Resources.Shared.Common.Search+">")' data-bind="value:searchFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.operations, optionsText: 'OperationCodeName', optionsValue: 'OperationId', optionsCaption: '&lt;' +'@Cares.Web.Resources.Tariff.SeasonalDiscount.Operation'+ '&gt;', value: operationFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.tariffTypes, optionsText: 'TariffTypeCodeName', optionsValue: 'TariffTypeId', optionsCaption: '&lt;' +'@Cares.Web.Resources.Tariff.SeasonalDiscount.TariffType'+ '&gt;', value: tariffTypeFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click: reset">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title='@Cares.Web.Resources.Shared.Common.HideSection'></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isSeasonalDiscountEditorVisible()">
        <div class="well">
            <table id="seasonalDiscountTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="Code"> <span id="1">@Cares.Web.Resources.Tariff.SeasonalDiscount.Code<span class="icon-up"></span></span></th>
                        <th class="Name"> <span id="2">@Cares.Web.Resources.Tariff.SeasonalDiscount.Name<span></span></span></th>
                        <th class="Company"> <span>@Cares.Web.Resources.Tariff.SeasonalDiscount.Company<span></span></span></th>
                        <th class="Operation"> <span>@Cares.Web.Resources.Tariff.SeasonalDiscount.Operation<span></span></span></th>
                        <th class="TariffType"> <span>@Cares.Web.Resources.Tariff.SeasonalDiscount.TariffType<span></span></span></th>
                        <th class="StartDate"> <span>@Cares.Web.Resources.Tariff.SeasonalDiscount.StartEffectiveDate<span></span></span></th>
                        <th class="EndDate"> <span>End Effective Date<span></span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'itemSeasonalDiscountMainTemplate' , foreach: seasonalDiscountMains } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="editActionSeasonalDiscountMainTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditSeasonalDiscountMain" title=@Cares.Web.Resources.Shared.Common.Edit><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="deleteActionSeasonalDiscountMainTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteSeasonalDiscountMain" title=@Cares.Web.Resources.Shared.Common.Delete><span class="glyphicon glyphicon-remove"></span></a>
    </script>
    <script id="itemSeasonalDiscountMainTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: companyCodeName"></td>
            <td data-bind="text: operationCodeName"></td>
            <td data-bind="text: tariffTypeCodeName"></td>
            <td data-bind="text: formattedStartDate"></td>
            <td data-bind="text: formattedEndDate"></td>
            <td>
                <!-- ko template: { name: 'editActionSeasonalDiscountMainTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionSeasonalDiscountMainTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_SeasonalDiscountEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["seasonalDiscount/seasonalDiscount.view", "common/confirmation.view"]);
        var ist = window.ist;
        @{
            <text>
        ist.resourceText.seasonalDiscountAddSuccessMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscountAddSuccessMsg';
            ist.resourceText.loadBaseDataFailedMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.LoadBaseDataFailedMsg';
        ist.resourceText.seasonalDiscountLoadFailedMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscountLoadFailedMsg';
        ist.resourceText.seasonalDiscountAddFailedMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscountAddFailedMsg';
        ist.resourceText.loadSeasonalDiscountDetailFailedMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.LoadSeasonalDiscountDetailFailedMsg';
        ist.resourceText.seasonalDiscountDeleteSuccessMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscountDeleteSuccessMsg';
        ist.resourceText.seasonalDiscountDeleteFailedMsg = '@Cares.Web.Resources.Tariff.SeasonalDiscount.SeasonalDiscountDeleteFailedMsg';
            </text>
        }
    </script>
}
