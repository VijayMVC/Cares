@{
    ViewBag.Title = Cares.Web.Resources.Pricing.ServiceType.ServiceTypeLabel;
}
<div class="row" id="ServiceTypeBinding">
    <div class="row " data-bind="visible: !isServiceTypeEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.Pricing.ServiceType.ServiceTypeLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isServiceTypeEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<"+Cares.Web.Resources.Pricing.ServiceType.Search+">")" data-bind="value: searchFilter" />
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isServiceTypeEditorVisible()">
        <div class="well">
            <table id="ServiceTypeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="ServiceTypeCode"> <span id="1">@Cares.Web.Resources.Pricing.ServiceType.Code<span class="icon-up"></span></span></th>
                        <th class="ServiceTypeName"> <span id="2">@Cares.Web.Resources.Pricing.ServiceType.Name<span></span></span></th>
                        <th class="ServiceTypeDiscription"> <span>@Cares.Web.Resources.Pricing.ServiceType.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'ServiceTypeFilterResultTemplate' , foreach: serviceTypes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionServiceTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionServiceTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="ServiceTypeFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionServiceTypeTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionServiceTypeTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_ServiceTypeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["serviceType/serviceType.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.ServiceTypeSavedSuccessfullyMessage = '@Cares.Web.Resources.Pricing.ServiceType.ServiceTypeSavedSuccessfullyMessage';
        ist.resourceText.ServiceTypeFailedToSaveError = '@Cares.Web.Resources.Pricing.ServiceType.ServiceTypeFailedToSaveError';
        ist.resourceText.ServiceTypeFailedToLoadError = '@Cares.Web.Resources.Pricing.ServiceType.ServiceTypeFailedToLoadError';
        ist.resourceText.ServiceTypeDeletedSuccessfullyMessage = '@Cares.Web.Resources.Pricing.ServiceType.ServiceTypeDeletedSuccessfullyMessage';
        ist.resourceText.ServiceTypeFailedTodeleteError = '@Cares.Web.Resources.Pricing.ServiceType.ServiceTypeFailedTodeleteError';
        </text>
       }
    </script>

}
