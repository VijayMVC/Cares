@{
    ViewBag.Title = "";
}
<div class="row" id="additionalDriverChargeBinding">
    <div class="row " data-bind="visible: !isAdditionalDriverChrgEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">Additional Driver Charges</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: createAddDriverChrg" title=''>@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title='@Cares.Web.Resources.Shared.Common.ShowFilter' style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isAdditionalDriverChrgEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.operations, optionsText: 'OperationCodeName', optionsValue: 'OperationId', optionsCaption: '&lt;' + '@Cares.Web.Resources.Tariff.ServiceRate.Operation' + '&gt;', value: operationFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.tariffTypes, optionsText: 'TariffTypeCodeName', optionsValue: 'TariffTypeId', optionsCaption: '&lt;' + '@Cares.Web.Resources.Tariff.ServiceRate.TariffType' + '&gt;', value: tariffTypeFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click: reset">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title='@Cares.Web.Resources.Shared.Common.HideSection'></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isAdditionalDriverChrgEditorVisible()">
        <div class="well">
            <table id="additionalDriverChargeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="code"> <span id="1">Code<span class="icon-up"></span></span></th>
                        <th class="name"> <span id="2">Name<span></span></span></th>
                        <th class="operation"> <span>Operation<span></span></span></th>
                        <th class="tariffType"> <span>TariffType<span></span></span></th>
                        <th class="startDate">Date<span></span></></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'itemAdditionalDriverChrgTemplate' , foreach: addDriverChrgs } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="editActionAdditionalDriverChrgTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditAddDriverChrg" title=@Cares.Web.Resources.Shared.Common.Edit><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="deleteActionAdditionalDriverChrgTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteAddDriverChrg" title=@Cares.Web.Resources.Shared.Common.Delete><span class="glyphicon glyphicon-remove"></span></a>
    </script>
    <script id="itemAdditionalDriverChrgTemplate" type="text/html">
        <tr>
            <td data-bind="text: tariffTypeCode"></td>
            <td data-bind="text: tariffTypeCodeName"></td>
            <td data-bind="text: rate"></td>
            <td data-bind="text: companyCodeName"></td>
            <td data-bind="text: operationCodeName"></td>
            <td data-bind="datestring: effectiveStartDate"></td>
            <td>
                <!-- ko template: { name: 'editActionAdditionalDriverChrgTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionAdditionalDriverChrgTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_AddtionalDriverChargeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["additionalDriverCharge/additionalDriverCharge.view", "common/confirmation.view"]);
    </script>
}
