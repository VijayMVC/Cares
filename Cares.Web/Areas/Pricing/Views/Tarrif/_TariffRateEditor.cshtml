<div class="well col-md-12" id="tariffRateEditor" data-bind="visible: isTariffRateEditorVisible" style="display: none;">
    <div class="detailsContainer">
        <h3 class="page-header detailsHeaderSection">Tariff Rate Details</h3>
        <button class="btn btn-info" id="saveBtn" data-bind="click: $root.onSaveTariffRate">Save</button>
        <button class="btn btn-default" id="saveBtn" data-bind="click: $root.closeTariffRateEditor">Cancel</button>
    </div>
    <form class="form-horizontal" data-bind="with: addTariffRate">
        <div class="form-group">
            <label for="tariffRateCode" class="control-label h5 col-sm-2">Tariff Rate Code *</label>
            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="<Tariff Rate Code>" id="tariffRateCode" data-bind="value: tariffRateCode, validationTooltip: tariffRateCode" />
            </div>
            <label for="tariffRateName" class="control-label h5 col-sm-2">Tariff Rate Name</label>
            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="<Tariff Rate Name>" id="tariffRateName" data-bind="value: tariffRateName, validationTooltip: tariffRateName" />
            </div>
            <label for="description" class="control-label h5 col-sm-2">Description</label>
            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="<Description>" id="description" data-bind="value: tariffRateDescription, validationTooltip: tariffRateDescription" />
            </div>
        </div>
        <div class="form-group">
            <label for="operation" class="control-label h5 col-sm-2">Operation *</label>
            <div class="col-md-2">
                <select id="operation" class="form-control" data-bind="options: $root.operations, optionsText: 'OperationName', optionsValue: 'OperationId', optionsCaption: '<Operation>' , value: operationId, validationTooltip: operationId"></select>
            </div>
            <label for="tariffType" class="control-label h5 col-sm-2">Tariff Type *</label>
            <div class="col-xs-2">
                <select id="tariffType" class="form-control" data-bind="options: $root.tariffTypes, optionsText: 'TariffTypeName', optionsValue: 'TariffTypeId', optionsCaption: '<Tariff Types>', value: tariffTypeId"></select>
            </div>
            <label for="startEffectiveDate" class="control-label h5 col-sm-2">Start Effective Date *</label>
            <div class="col-md-2">
                <input type="text" placeholder="<Start Effective Date>" class="form-control" id="startEffectiveDate" data-bind="datepicker: startEffectiveDate, validationTooltip: startEffectiveDate" />
            </div>
        </div>

        <div class="form-group">
            <label for="endTypeEffectiveDate" class="control-label h5 col-sm-2">End Effective Date *</label>
            <div class="col-md-2">
                <input type="text" placeholder="<End Effective Date>" class="form-control" id="endTypeEffectiveDate" data-bind="datepicker: endEffectiveDate, validationTooltip: endEffectiveDate" />
            </div>
        </div>

    </form>
    <div class="row ">
        <h3 class="page-header float-left pageHeaderSection"></h3>
        <div class="header-toolsSection">
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !$root.filterSectionVisilble(), click: $root.showFilterSection" title="Show Filters" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: $root.filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: $root.searchHireGroups">
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.hireGroups, optionsText: 'HireGroupName', optionsValue: 'HireGroupId', optionsCaption: '<Hire Groups>', value: $root.hireGroupFilter "></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.vehicleMakes, optionsText: 'VehicleMakeName', optionsValue: 'VehicleMakeId', optionsCaption: '<Vehicle Make>', value: $root.vehicleMakeFilter "></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.vehicleModels, optionsText: 'VehicleModelName', optionsValue: 'VehicleModeld', optionsCaption: '<Vehicle Model>', value: $root.vehicleModelFilter "></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.vehicleCategories, optionsText: 'VehicleCategoryName', optionsValue: 'VehicleCategoryId', optionsCaption: '<Vehicle Category>', value: $root.vehicleCategoryFilter "></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: $root.searchHireGroups">Search</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: $root.collapseFilterSection" title="Hide Section"></a>
            </form>
        </div>
    </div>
    <div class="panel panel-info searchFilterResultSection">
        <table id="hireGroupRate" class="table table-condensed">
            <thead>
                <tr>
                    <th> <span></span></th>
                    <th> <span id="1">Hire<br />Group<span class="icon-up"></span></span></th>
                    <th> <span id="2">Vehicle<br />Make<span></span></span></th>
                    <th> <span id="3">Vehicle<br />Model<span></span></span></th>
                    <th> <span id="4">Vehicle<br />Category<span></span></span></th>
                    <th> <span id="5">Model<br />Year<span></span></span></th>
                    <th> <span id="6">Allowed<br />Mileage<span></span></span></th>
                    <th> <span id="7">Excess<br />Mileage Charge<span></span></span></th>
                    <th> <span id="8">Standard<br />Rate<span></span></span></th>
                    <th> <span id="9">Start<br />Date<span></span></span></th>
                    <th> <span id="10">End<br />Date<span></span></span></th>
                </tr>
            </thead>
            <tbody>
                <!-- ko template: { name: templateToUse , foreach: hireGroupDetails } -->
                <!-- /ko -->
            </tbody>
        </table>
        <!-- ko with: editorPager -->
        @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
        <!-- /ko -->
        <script id="editHireGroupTemplate" type="text/html">
            <tr data-bind="css: { selectedRow: $data === $root.selectedHireGroup() }">
                <td class="col-md-2">
                    @*<input type="checkbox" data-bind="checked: isChecked" />*@
                    <input type="checkbox" data-bind="attr: { value: hireGroupDetailId }, checked: $root.selectedHireGroupList">
                </td>
                <td class="col-md-2">
                    <span data-bind="text: hireGroup"></span>
                </td>
                <td class="col-md-2">
                    <span data-bind="text: vehicleMake"></span>
                </td>
                <td class="col-md-2">
                    <span data-bind="text: vehicleModel"></span>
                </td>
                <td class="col-md-2">
                    <span data-bind="text: vehicleCategory"></span>
                </td>
                <td class="col-md-2">
                    <span data-bind="text: modelYear"></span>
                </td>
                <td class="col-md-2">
                    <input type="text" data-bind="value: allowMileage, validationTooltip: allowMileage" />
                </td>
                <td class="col-md-2">
                    <input type="text" data-bind="value: excessMileageCharge, validationTooltip: excessMileageCharge" />
                </td>
                <td class="col-md-2">
                    <input type="text" data-bind="value: standardRate, validationTooltip: standardRate" />
                </td>
                <td class="col-md-2">
                    <input type="text" data-bind="datepicker: startDate, validationTooltip: startDate" />
                </td>
                <td class="col-md-2">
                    <input type="text" data-bind="datepicker: endDate, validationTooltip: endDate" />
                </td>
            </tr>
        </script>
        <script id="itemHireGroupTemplate" type="text/html">
            <tr data-bind="click: $root.selectHireGroup, css: { selectedRow: $data === $root.selectedHireGroup() }">
                <td><input type="checkbox" data-bind="checked: isChecked" /></td>
                <td data-bind="text: hireGroup"></td>
                <td data-bind="text: vehicleMake"></td>
                <td data-bind="text: vehicleModel"></td>
                <td data-bind="text: vehicleCategory"></td>
                <td data-bind="text: modelYear"></td>
                <td data-bind="text: allowMileage"></td>
                <td data-bind="text: excessMileageCharge"></td>
                <td data-bind="text: standardRate"></td>
                <td data-bind="text: startDate"></td>
                <td data-bind="text: endDate"></td>
            </tr>
        </script>
    </div>
</div>
