

<div class="well col-md-12" id="tariffTypeEditor" data-bind="visible: isTariffRateEditorVisible, with: addTariffRate" style="display: none;">
    <h3>Tariff Rate Add/Edit</h3>
    <h2 class="sectionHeader">
        <span><a href="#" class="custom-link" id="link-action" data-bind="click: $root.closeTariffRateEditor">< Back</a></span>
        <span>Tariff Rate Editor</span>
    </h2>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="tariffRateCode" class="control-label col-sm-2">Tariff Rate Code *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="<Tariff Type Code>" id="tariffRateCode" data-bind="value: tariffRateCode, validationTooltip: tariffRateCode" />
            </div>
            <label for="tariffRateName" class="control-label col-sm-2">Tariff Rate Name</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="<Tariff Type Name>" id="tariffRateName" data-bind="value: tariffRateName, validationTooltip: tariffRateName" />
            </div>

        </div>
        <div class="form-group">
            <label for="description" class="control-label col-sm-2">Description</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="<Description>" id="description" data-bind="value: description, validationTooltip: description" />
            </div>
            <label for="operation" class="control-label col-sm-2">Operation *</label>
            <div class="col-md-3">
                <select id="operation" class="form-control" data-bind="options: $root.operations, optionsText: 'OperationName', optionsValue: 'OperationId', optionsCaption: '<Operation>' , value: operationId, validationTooltip: operationId"></select>
            </div>
        </div>
        
        <div class="form-group">
            <label for="tariffType" class="control-label col-sm-2">Tariff Type *</label>
            <div class="col-xs-3">
                <select id="tariffType" class="form-control" data-bind="options: $root.tariffTypes, optionsText: 'TariffTypeName', optionsValue: 'TariffTypeId', optionsCaption: '<Tariff Types>', value: tariffTypeId"></select>
            </div>
            <label for="startEffectiveDate" class="control-label col-sm-2">Start Effective Date *</label>
            <div class="col-md-3">
                <input type="text" placeholder="<Effective start Date>" class="form-control" id="startEffectiveDate" data-bind="datepicker: startEffectiveDate, validationTooltip: startEffectiveDate" />
            </div>
        </div>
        <div class="form-group">
           
            <label for="endTypeEffectiveDate" class="control-label col-sm-2">End Effective Date *</label>
            <div class="col-md-3">
                <input type="text" placeholder="<Effective start Date>" class="form-control" id="endTypeEffectiveDate" data-bind="datepicker: endEffectiveDate, validationTooltip: endEffectiveDate" />
            </div>
        </div>

        <div class="form-group">
            <button class="btn" id="saveBtn" data-bind="click: $root.onSaveTariffRate, enable: hasChanges, css: { 'btn-warning': hasChanges }">Save</button>
        </div>
    </form>
    
</div>
