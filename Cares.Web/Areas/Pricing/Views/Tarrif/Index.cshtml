@{
    ViewBag.Title = "Index";
}

<div class="row" id="tarrifTypeBinding">
    <div class="row searchFilterSection" data-bind="visible: !isTarrifTypeEditorVisible()">
        <div class="well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Search>" data-bind="value: tarrifTypeCodeFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.measurementUnits, optionsText: 'MeasurementUnitName', optionsValue: 'MeasurementUnitId', optionsCaption: '<Measurement Unit>', value: measurementUnitFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.operations, optionsText: 'OperationName', optionsValue: 'OperationId', optionsCaption: '<Operation>', value: operationFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">Search</button>
                <div class="btn-group" id="createButton">
                    <button type="button" data-bind="click:createTariffTypeInForm" class=" btn btn-default">Create New</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isTarrifTypeEditorVisible()">
        <div class="well">
            <table id="tarrifTypeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">Tariff Type Code<span class="icon-up"></span></span></th>
                        <th> <span id="2">Tariff Type Name<span></span></span></th>
                        <th> <span id="4">Pricing Scheme<span></span></span></th>
                        <th> <span id="5">Company<span></span></span></th>
                        <th> <span id="6">Operation<span></span></span></th>
                        <th> <span id="7">Measurement Unit<span></span></span></th>
                        <th> <span id="8">From<span></span></span></th>
                        <th> <span id="9">To<span></span></span></th>
                        <th> <span id="10">Grace Period<span></span></span></th>
                        <th> <span id="11">Effective Date<span></span></span></th>
                        <th> <span id="12">Revision<span></span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: templateToUse , foreach: tarrifTypes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
        </div>
    </div>
    <script id="editActionTarrifTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditTariffType" title="Edit in Form"><span class="glyphicon glyphicon-edit"></span></a>
    </script>

    <script id="itemTarrifTypeTemplate" type="text/html">
        <tr data-bind="click: $root.selectTarrifType">
            <td data-bind="text: tariffTypeCode"></td>
            <td data-bind="text: tarrifTypeName"></td>
            <td data-bind="text: pricingScheme"></td>
            <td data-bind="text: companay"></td>
            <td data-bind="text: operation"></td>
            <td data-bind="text: measurementUnit"></td>
            <td data-bind="text: durationFrom"></td>
            <td data-bind="text: durationTo"></td>
            <td data-bind="text: gracePeriod"></td>
            <td data-bind="text: effectiveDate"></td>
            <td data-bind="text: revisionNumber"></td>
            <td>
                <!-- ko template: { name: 'editActionTarrifTypeTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>

    @Html.Partial("_TariffTypeEditor")

</div>

<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["tarrifType/tarrifType.view", "common/confirmation.view"]);

    </script>
}
