@{
    ViewBag.Title = Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.MaintenanceTypeGroupLabel;
}
<div class="row" id="MaintenanceTypeGroupBinding">

    <div class="row " data-bind="visible: !isMaintenanceTypeGroupEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.MaintenanceTypeGroupLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isMaintenanceTypeGroupEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.Search + ">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isMaintenanceTypeGroupEditorVisible()">
        <div class="well">
            <table id="MaintenanceTypeGroupTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="maintenanceTypeGroupCode th-pointer"> <span id="1">@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.Code<span class="icon-up"></span></span></th>
                        <th class="maintenanceTypeGroupName th-pointer"> <span id="2">@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.Name<span></span></span></th>
                        <th class="maintenanceTypeGroupDiscription"> <span>@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'MaintenanceTypeGroupFilterResultTemplate' , foreach: maintenanceTypeGroups } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionMaintenanceTypeGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionMaintenanceTypeGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="MaintenanceTypeGroupFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionMaintenanceTypeGroupTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionMaintenanceTypeGroupTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_MaintenanceTypeGroupEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["maintenanceTypeGroup/maintenanceTypeGroup.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.MaintenanceTypeGroupSuccessfullySavedMessage = '@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.MaintenanceTypeGroupSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveMaintenanceTypeGroupError = '@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.FailedToSaveMaintenanceTypeGroupError';
        ist.resourceText.FailedToLoadMaintenanceTypeGroupsError = '@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.FailedToLoadMaintenanceTypeGroupsError';
        ist.resourceText.MaintenanceTypeGroupSuccessfullyDeletedMessage = '@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.MaintenanceTypeGroupSuccessfullyDeletedMessage';
        ist.resourceText.MaintenanceTypeGroupSuccessfullyDeletedMessage = '@Cares.Web.Resources.FleetPool.MaintenanceTypeGroup.MaintenanceTypeGroupSuccessfullyDeletedMessage';
        </text>
       }
    </script>

}
