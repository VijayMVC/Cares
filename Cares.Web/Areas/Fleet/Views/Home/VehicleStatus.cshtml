@{
    ViewBag.Title = Cares.Web.Resources.FleetPool.VehicleStatus.VehicleStatusLabel;
}
<div class="row" id="VehicleStatusBinding">
    
    <div class="row " data-bind="visible: !isVehicleStatusEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.FleetPool.VehicleStatus.VehicleStatusLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isVehicleStatusEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.FleetPool.VehicleStatus.Search + ">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isVehicleStatusEditorVisible()">
        <div class="well">
            <table id="VehicleStatusTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="VehicleStatusCode"> <span id="1">@Cares.Web.Resources.FleetPool.VehicleStatus.Code<span class="icon-up"></span></span></th>
                        <th class="VehicleStatusName"> <span id="2">@Cares.Web.Resources.FleetPool.VehicleStatus.Name<span></span></span></th>
                        <th class="VehicleStatusDiscription"> <span>@Cares.Web.Resources.FleetPool.VehicleStatus.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'VehicleStatusFilterResultTemplate' , foreach: vehicleStatuses } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionVehicleStatusTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionVehicleStatusTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="VehicleStatusFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionVehicleStatusTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionVehicleStatusTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_VehicleStatusEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["vehicleStatus/vehicleStatus.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.VehicleStatusSuccessfullySavedMessage = '@Cares.Web.Resources.FleetPool.VehicleStatus.VehicleStatusSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveVehicleStatusError = '@Cares.Web.Resources.FleetPool.VehicleStatus.FailedToSaveVehicleStatusError';
        ist.resourceText.FailedToLoadVehicleStatusError = '@Cares.Web.Resources.FleetPool.VehicleStatus.FailedToLoadVehicleStatusError';
        ist.resourceText.VehicleStatusSuccesfullyDeleted = '@Cares.Web.Resources.FleetPool.VehicleStatus.VehicleStatusSuccesfullyDeleted';
        ist.resourceText.FailedToDeleteVehicleStatusError = '@Cares.Web.Resources.FleetPool.VehicleStatus.FailedToDeleteVehicleStatusError';
        </text>
       }
    </script>

}
