@{
    ViewBag.Title = @Cares.Web.Resources.Tariff.HireGroup.HireGroupText;
}

<div class="row" id="hireGroupBinding">
    <div class="row " data-bind="visible: !isHireGroupEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.Tariff.HireGroup.HireGroups</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: createHireGroup" title='@Cares.Web.Resources.Tariff.TariffRate.CreateNewTarifRate'>@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title='@Cares.Web.Resources.Shared.Common.ShowFilter' style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isHireGroupEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder='@("<"+Cares.Web.Resources.Shared.Common.Search+">")' data-bind="value: hireGroupCodeFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.companies, optionsText: 'CompanyCodeName', optionsValue: 'CompanyId', optionsCaption: '&lt;' + '@Cares.Web.Resources.Tariff.HireGroup.Company'+ '&gt;', value: companyFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.parentHireGroups, optionsText: 'ParentHireGroupName', optionsValue: 'HireGroupId', optionsCaption: '@Cares.Web.Resources.Tariff.HireGroup.ParentHireGroup', value: parentHireGroupFilter"></select>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title='@Cares.Web.Resources.Shared.Common.HideSection'></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isHireGroupEditorVisible()">
        <div class="well">
            <table id="hireGroupTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">@Cares.Web.Resources.Tariff.HireGroup.HireGroupCode<span class="icon-up"></span></span></th>
                        <th> <span id="2">@Cares.Web.Resources.Tariff.HireGroup.HireGroupName<span></span></span></th>
                        <th> <span id="3">@Cares.Web.Resources.Tariff.HireGroup.ParentHireGroup<span></span></span></th>
                        <th> <span>@Cares.Web.Resources.Tariff.HireGroup.Description<span></span></span></th>
                        <th> <span>@Cares.Web.Resources.Tariff.HireGroup.Company<span></span></span></th>
                        <th> <span>@Cares.Web.Resources.Tariff.HireGroup.IsParent<span></span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'itemHireGroupTemplate' , foreach: hireGroups } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="editActionHireGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditHireGroup" title=@Cares.Web.Resources.Shared.Common.Edit><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="deleteActionHireGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteHireGroup" title=@Cares.Web.Resources.Shared.Common.Delete><span class="glyphicon glyphicon-remove"></span></a>
    </script>
    <script id="itemHireGroupTemplate" type="text/html">
        <tr>
            <td data-bind="text: hireGroupCode"></td>
            <td data-bind="text: hireGroupName"></td>
            <td data-bind="text: parentHireGroupName"></td>
            <td data-bind="text: description"></td>
            <td data-bind="text: companyName"></td>
            <td data-bind="text: isParent"></td>
            <td>
                <!-- ko template: { name: 'editActionHireGroupTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionHireGroupTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_HireGroupEditor")

</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["hireGroup/hireGroup.view", "common/confirmation.view"]);
        @{
            <text>
        ist.resourceText.hireGroupDetailFailedMsg = '@Cares.Web.Resources.Tariff.HireGroup.HireGroupDetailFailedMsg';
        ist.resourceText.hireGroupDeleteSuccessMsg = '@Cares.Web.Resources.Tariff.HireGroup.HireGroupDeleteSuccessMsg';
        ist.resourceText.hireGroupDeleteFailedMsg = '@Cares.Web.Resources.Tariff.HireGroup.HireGroupDeleteFailedMsg';
        ist.resourceText.hirGroupAddSuccesMsg = '@Cares.Web.Resources.Tariff.HireGroup.HirGroupAddSuccesMsg';
        ist.resourceText.hirGroupAddFailedMsg = '@Cares.Web.Resources.Tariff.HireGroup.HirGroupAddFailedMsg';
        ist.resourceText.loadBaseDataFailedMsg = '@Cares.Web.Resources.Tariff.HireGroup.LoadBaseDataFailedMsg';
        ist.resourceText.hireGroupLoadFailedMsg = '@Cares.Web.Resources.Tariff.HireGroup.HireGroupLoadFailedMsg';
            </text>
        }
    </script>
}
