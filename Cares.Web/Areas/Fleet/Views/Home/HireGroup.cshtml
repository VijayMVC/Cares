@{
    ViewBag.Title = "Index";
}

<div class="row" id="hireGroupBinding">
    <div class="row " data-bind="visible: !isHireGroupEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">Hire Group</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: createHireGroup" title="Create New Hire Group">NEW</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="Show Filters" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isHireGroupEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class=" well">
            <form class="form-horizontal" data-bind="submit: search">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Search>" data-bind="value: hireGroupCodeFilter" />
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.companies, optionsText: 'CompanyName', optionsValue: 'CompanyId', optionsCaption: '<Company>', value: companyFilter"></select>
                </div>
                <div class="col-xs-3">
                    <select class="form-control" data-bind="options: $root.parentHireGroups, optionsText: 'ParentHireGroupName', optionsValue: 'HireGroupId', optionsCaption: '<Parent Hire Group>', value: parentHireGroupFilter"></select>

                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">Search</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click: collapseFilterSection" title="Hide Section"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isHireGroupEditorVisible()">
        <div class="well">
            <table id="hireGroupTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th> <span id="1">Hire Group Code<span class="icon-up"></span></span></th>
                        <th> <span id="2">Hire Group Name<span></span></span></th>
                        <th> <span id="3">Parent Hire Group<span></span></span></th>
                        <th> <span>Description<span></span></span></th>
                        <th> <span>Company<span></span></span></th>
                        <th> <span>Is Parent<span></span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'itemHireGroupTemplate' , foreach: hireGroups } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="editActionHireGroupTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditHireGroup" title="Edit" ><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="deleteActionHireGroupTemplate" type="text/html">
        <a href="#"  title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>
    <script id="itemHireGroupTemplate" type="text/html">
        <tr>
            <td data-bind="text: hireGroupCode"></td>
            <td data-bind="text: hireGroupName"></td>
            <td data-bind="text: parentHireGroupName"></td>
            <td data-bind="text: description"></td>
            <td data-bind="text: companyName"></td>
            <td data-bind="text: isParent"></td>
            <td>
                <!-- ko template: { name: 'editActionHireGroupTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionHireGroupTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_HireGroupEditor")

</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["hireGroup/hireGroup.view", "common/confirmation.view"]);

    </script>
}
