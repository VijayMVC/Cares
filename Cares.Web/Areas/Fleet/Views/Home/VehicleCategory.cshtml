@{
    ViewBag.Title = Cares.Web.Resources.FleetPool.VehicleCategory.VehicleCategoryLabel;
}
<div class="row" id="VehicleCategoryBinding">

    <div class="row " data-bind="visible: !isVehicleCategoryEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.FleetPool.VehicleCategory.VehicleCategoryLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isVehicleCategoryEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.FleetPool.VehicleCategory.Search + ">")" data-bind="value: searchFilter" />
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isVehicleCategoryEditorVisible()">
        <div class="well">
            <table id="VehicleCategoryTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="VehicleCategoryCode"> <span id="1">@Cares.Web.Resources.FleetPool.VehicleCategory.Code<span class="icon-up"></span></span></th>
                        <th class="VehicleCategoryName"> <span id="2">@Cares.Web.Resources.FleetPool.VehicleCategory.Name<span></span></span></th>
                        <th class="VehicleCategoryDescription"> <span>@Cares.Web.Resources.FleetPool.VehicleCategory.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'VehicleCategoryFilterResultTemplate' , foreach: vehicleCategories } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionVehicleCategoryTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionVehicleCategoryTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="VehicleCategoryFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionVehicleCategoryTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionVehicleCategoryTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_VehicleCategoryEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["vehicleCategory/vehicleCategory.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.VehicleCategorySuccessfullySavedMessage = '@Cares.Web.Resources.FleetPool.VehicleCategory.VehicleCategorySuccessfullySavedMessage';
        ist.resourceText.FailedToSaveCategoryError = '@Cares.Web.Resources.FleetPool.VehicleCategory.FailedToSaveCategoryError';
        ist.resourceText.FailedToLoadVehicleCategoriesError = '@Cares.Web.Resources.FleetPool.VehicleCategory.FailedToLoadVehicleCategoriesError';
        ist.resourceText.VehicleCategorySuccessfullyDeletedMessage = '@Cares.Web.Resources.FleetPool.VehicleCategory.VehicleCategorySuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteVehicleCategoryError = '@Cares.Web.Resources.FleetPool.VehicleCategory.FailedToDeleteVehicleCategoryError';
        </text>
       }
    </script>

}
