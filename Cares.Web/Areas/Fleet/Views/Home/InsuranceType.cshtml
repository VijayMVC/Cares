@{
    ViewBag.Title = Cares.Web.Resources.FleetPool.InsuranceType.InsuranceTypeLabel;
}
<div class="row" id="InsuranceTypeBinding">

    <div class="row " data-bind="visible: !isInsuranceTypeEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.FleetPool.InsuranceType.InsuranceTypeLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isInsuranceTypeEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.FleetPool.InsuranceType.Search + ">")" data-bind="value: searchFilter" />
                </div>


                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isInsuranceTypeEditorVisible()">
        <div class="well">
            <table id="InsuranceTypeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="InsuranceTypeCode"> <span id="1">@Cares.Web.Resources.FleetPool.InsuranceType.Code<span class="icon-up"></span></span></th>
                        <th class="InsuranceTypeName"> <span id="2">@Cares.Web.Resources.FleetPool.InsuranceType.Name<span></span></span></th>
                        <th class="InsuranceTypeDescription"> <span>@Cares.Web.Resources.FleetPool.InsuranceType.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'InsuranceTypeFilterResultTemplate' , foreach: insuranceTypes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActioInsuranceTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionInsuranceTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="InsuranceTypeFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionInsuranceTypeTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActioInsuranceTypeTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_InsuranceTypeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["insuranceType/insuranceType.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.InsuranceTypeSuccessfullySavedMessage = '@Cares.Web.Resources.FleetPool.InsuranceType.InsuranceTypeSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveInsuranceTypeError = '@Cares.Web.Resources.FleetPool.InsuranceType.FailedToSaveInsuranceTypeError';
        ist.resourceText.FailedToLoadInsuranceTypesError = '@Cares.Web.Resources.FleetPool.InsuranceType.FailedToLoadInsuranceTypesError';
        ist.resourceText.InsuranceTypeSuccessfullyDeletedMessage = '@Cares.Web.Resources.FleetPool.InsuranceType.InsuranceTypeSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteInsuranceTypeError = '@Cares.Web.Resources.FleetPool.InsuranceType.FailedToDeleteInsuranceTypeError';
        </text>
       }
    </script>

}
