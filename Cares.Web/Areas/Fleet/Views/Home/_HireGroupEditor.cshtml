
<div class="well col-md-12" id="hireGroupEditor" data-bind="visible: isHireGroupEditorVisible, with: selectedHireGroup" style="display: none;">
    <div class="detailsContainer">
        <h3 class="page-header detailsHeaderSection">Hire Group Details</h3>
        <button class="btn  btn-info" id="saveBtn" data-bind="click: $root.onSaveHireGroup">Save</button>
        <button class="btn btn-default" id="saveBtn" data-bind="click: $root.closeHireGroupEditor">Cancel</button>
    </div>

    <form class="form-horizontal">
        <div class="form-group">
            <label for="hireGroupCode" class="control-label h5 col-sm-2">Hire Group Code *</label>
            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="<Hire Group Code>" id="hireGroupCode" data-bind="value: hireGroupCode, validationTooltip: hireGroupCode, disable :virtualIsParent()" />
            </div>
            <label for="hireGroupName" class="control-label h5 col-sm-2">Hire Group Name</label>
            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="<Hire Group Name>" id="hireGroupName" data-bind="value: hireGroupName, validationTooltip: hireGroupName, disable :virtualIsParent()" />
            </div>
            <label for="company" class="control-label h5 col-sm-2">Company *</label>
            <div class="col-md-2">
                <select id="company" class="form-control" data-bind="options: $root.companies, optionsText: 'CompanyName', optionsValue: 'CompanyId', optionsCaption: '<Company>', value: companyId, validationTooltip: companyId, disable :virtualIsParent(), event:{change:$root.onSelectedCompany}"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="isParent" class="control-label h5 col-sm-2">Is Parent?  </label>
            <div class="col-md-2">
                <input type="checkbox" class="form-control" id="isParent" data-bind="value: isParent, validationTooltip: isParent, disable :virtualIsParent()" />
            </div>
            <label for="isParentHireGroup" class="control-label h5 col-sm-2">Parent Hire Group </label>
            <div class="col-xs-2">
                <select id="isParentHireGroup" class="form-control" data-bind="options: $root.filteredParentHireGroups, optionsText: 'ParentHireGroupName', optionsValue: 'ParentHireGroupId', optionsCaption: '<Parent Hire Group>', value: parentHireGroupId,validationTooltip: parentHireGroupId, disable :virtualIsParent()"></select>
            </div>
            <label for="description" class="control-label h5 col-sm-2">Description</label>
            <div class="col-md-2">
                <textarea class="form-control" rows="2" placeholder="<Description>" id="description" data-bind="value: description, valueUpdate: 'keyup', disable :virtualIsParent()"></textarea>
            </div>
        </div>
    </form>
    <div class="panel panel-info">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#detail" role="tab" data-toggle="tab">Detail</a></li>
            <li><a href="#upgradedHireGroups" role="tab" data-toggle="tab">Upgraded HireGroups</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <br />
            <!-- first tab - Detail-->
            <div class="tab-pane active" id="detail" data-bind="with:vehicleDetail">
                <form class="form-horizontal">
                    <button class="btn  btn-info" id="saveBtn" data-bind="click: $root.onAddVehicleDetail">Add</button>
                    <div class="form-group">
                        <label for="vehicleMake" class="control-label h5 col-sm-2">Vehicle Make*</label>
                        <div class="col-md-2">
                            <select id="vehicleMake" class="form-control" data-bind="options: $root.vehicleMakes, optionsText: 'VehicleMakeCodeName', optionsCaption: '<Vehicle Make>', value:vehicleMakeId, event:{change:$root.onVehicleMakeChange}"></select>
                        </div>
                        <label for="vehicleModel" class="control-label h5 col-sm-2">Vehicle Model*</label>
                        <div class="col-md-2">
                            <select id="vehicleModel" class="form-control" data-bind="options: $root.vehicleModels, optionsText: 'VehicleModelCodeName', optionsCaption: '<Vehicle Model>', value: vehicleModelId, event:{change:$root.onVehicleModelChange} "></select>
                        </div>
                        <label for="vehicleCategory" class="control-label h5 col-sm-2">Vehicle Category</label>
                        <div class="col-md-2">
                            <select id="vehicleCategory" class="form-control" data-bind="options: $root.vehicleCategories, optionsText: 'VehicleCategoryCodeName', optionsCaption: '<Vehicle Category>', value: vehicleCategoryId, event:{change:$root.onVehicleCategoryChange} "></select>
                        </div>
                    </div>
                    <div class="form-group">

                    </div>
                </form>

                <table id="hireGroupDetail" class="table table-condensed">
                    <thead>
                        <tr>
                            <th> <span></span></th>
                            <th> <span>Vehicle<br />Make<span></span></span></th>
                            <th> <span>Vehicle<br />Model<span></span></span></th>
                            <th> <span>Vehicle<br />Category<span></span></span></th>
                            <th> <span>Model<br />Year<span></span></span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ko template: { name: itemHireGroupDetailTemplate , foreach: $root.hireGroupDetails } -->
                        <!-- /ko -->
                    </tbody>
                </table>
                <script id="itemHireGroupDetailTemplate" type="text/html">
                    <tr >
                        <td data-bind="text: vehicleMakeName"></td>
                        <td data-bind="text: VehicleModelCodeName"></td>
                        <td data-bind="text: vehicleModelName"></td>
                        @*<td data-bind="text: modelYear"></td>*@
                    </tr>
                </script>
            </div>
            <!-- second tab - Upgraded HireGroups-->
            <div class="tab-pane" id="upgradedHireGroups">...</div>
        </div>
    </div>
</div>