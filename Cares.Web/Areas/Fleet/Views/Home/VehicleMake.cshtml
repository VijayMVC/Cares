@{
    ViewBag.Title = Cares.Web.Resources.FleetPool.VehicleMake.VehicleMakeLabel;
}
<div class="row" id="VehicleMakeBinding">

    <div class="row " data-bind="visible: !isVehicleMakeEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.FleetPool.VehicleMake.VehicleMakeLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isVehicleMakeEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.FleetPool.VehicleMake.Search + ">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isVehicleMakeEditorVisible()">
        <div class="well">
            <table id="VehicleMakeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="VehicleCode th-pointer"> <span id="1">@Cares.Web.Resources.FleetPool.VehicleMake.Code<span class="icon-up"></span></span></th>
                        <th class="VehicleName th-pointer"> <span id="2">@Cares.Web.Resources.FleetPool.VehicleMake.Name<span></span></span></th>
                        <th class="VehicleDescription"> <span>@Cares.Web.Resources.FleetPool.VehicleMake.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'VehicleMakeFilterResultTemplate' , foreach: vehicleMakes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionVehicleMakeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionVehicleMakeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="VehicleMakeFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionVehicleMakeTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionVehicleMakeTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_VehicleMakeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["vehicleMake/vehicleMake.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.VehicleMakeSuccessfullySavedMessage = '@Cares.Web.Resources.FleetPool.VehicleMake.VehicleMakeSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveVehicleMakeError = '@Cares.Web.Resources.FleetPool.VehicleMake.FailedToSaveVehicleMakeError';
        ist.resourceText.FailedToLoadVehicleMakesError = '@Cares.Web.Resources.FleetPool.VehicleMake.FailedToLoadVehicleMakesError';
        ist.resourceText.VehicleMakeSuccessfullyDeletedMessage = '@Cares.Web.Resources.FleetPool.VehicleMake.VehicleMakeSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteVehicleMakeError = '@Cares.Web.Resources.FleetPool.VehicleMake.FailedToDeleteVehicleMakeError';
        </text>
       }
    </script>

}
