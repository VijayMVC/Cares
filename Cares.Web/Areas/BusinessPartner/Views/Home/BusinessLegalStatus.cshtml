@{
    ViewBag.Title = Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.BusinessLegalStatusLabel;
}
<div class="row" id="BusinessLegalStatusBinding">

    <div class="row " data-bind="visible: !isBusinessLegalStatusEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.BusinessLegalStatusLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isBusinessLegalStatusEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.Search + ">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isBusinessLegalStatusEditorVisible()">
        <div class="well">
            <table id="BusinessLegalStatusTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="businessLegalStatusCode"> <span id="1">@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.Code<span class="icon-up"></span></span></th>
                        <th class="businessLegalStatusName"> <span id="2">@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.Name<span></span></span></th>
                        <th class="businessLegalStatusDiscription"> <span>@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'BusinessLegalStatusFilterResultTemplate' , foreach: businessLegalStatuses } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionBusinessLegalStatusTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionBusinessLegalStatusTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="BusinessLegalStatusFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionBusinessLegalStatusTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionBusinessLegalStatusTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_BusinessLegalStatusEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["businessLegalStatus/businessLegalStatus.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.BusinessLegalStatusSuccessfullySavedMessage = '@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.BusinessLegalStatusSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveBusinessLegalStatusError = '@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.FailedToSaveBusinessLegalStatusError';
        ist.resourceText.FailedToLoadBusinessLegalStatusesError = '@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.FailedToLoadBusinessLegalStatusesError';
        ist.resourceText.BusinessLegalStatusSuccessfullyDeletedMessage = '@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.BusinessLegalStatusSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteBusinessLegalStatusError = '@Cares.Web.Resources.BusinessPartner.BusinessLegalStatus.FailedToDeleteBusinessLegalStatusError';
        </text>
       }
    </script>

}
