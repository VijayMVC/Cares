@{
    ViewBag.Title = Cares.Web.Resources.BusinessPartner.OccupationType.OccupationTypeLabel;
}
<div class="row" id="OccupationTypeBinding">

    <div class="row " data-bind="visible: !isOccupationTypeEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.BusinessPartner.OccupationType.OccupationTypeLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isOccupationTypeEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.BusinessPartner.OccupationType.Search + ">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isOccupationTypeEditorVisible()">
        <div class="well">
            <table id="OccupationTypeTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="occupationTypeCode"> <span id="1">@Cares.Web.Resources.BusinessPartner.OccupationType.Code<span class="icon-up"></span></span></th>
                        <th class="occupationTypeName"> <span id="2">@Cares.Web.Resources.BusinessPartner.OccupationType.Name<span></span></span></th>
                        <th class="occupationTypeDiscription"> <span>@Cares.Web.Resources.BusinessPartner.OccupationType.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'OccupationTypeFilterResultTemplate' , foreach: occupationTypes } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionOccupationTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionOccupationTypeTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="OccupationTypeFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionOccupationTypeTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionOccupationTypeTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_OccupationTypeEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["occupationType/occupationType.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.OccupationTypeSuccessfullySavedMessage = '@Cares.Web.Resources.BusinessPartner.OccupationType.OccupationTypeSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveOccupationTypeError = '@Cares.Web.Resources.BusinessPartner.OccupationType.FailedToSaveOccupationTypeError';
        ist.resourceText.FailedToLoadOccupationTypesError = '@Cares.Web.Resources.BusinessPartner.OccupationType.FailedToLoadOccupationTypesError';
        ist.resourceText.OccupationTypeSuccessfullyDeletedMessage = '@Cares.Web.Resources.BusinessPartner.OccupationType.OccupationTypeSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteOccupationTypeError = '@Cares.Web.Resources.BusinessPartner.OccupationType.FailedToDeleteOccupationTypeError';
        </text>
       }
    </script>

}
