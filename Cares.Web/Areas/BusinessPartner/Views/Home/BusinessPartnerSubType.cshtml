        ist.resourceText.BusinessPartnerSubTypeSuccessfullySavedMessage = '@Cares.Web.Resources.BusinessPartner.BusinessPartnerSubType.BusinessPartnerSubTypeSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveBusinessPartnerSubTypeError = '@Cares.Web.Resources.BusinessPartner.BusinessPartnerSubType.FailedToSaveBusinessPartnerSubTypeError';
        ist.resourceText.FailedToLoadBusinessPartnerSubTypesError = '@Cares.Web.Resources.BusinessPartner.BusinessPartnerSubType.FailedToLoadBusinessPartnerSubTypesError';
        ist.resourceText.BusinessPartnerSubTypeSuccessfullyDeletedMessage = '@Cares.Web.Resources.BusinessPartner.BusinessPartnerSubType.BusinessPartnerSubTypeSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteBusinessPartnerSubTypeError = '@Cares.Web.Resources.BusinessPartner.BusinessPartnerSubType.FailedToDeleteBusinessPartnerSubTypeError';
