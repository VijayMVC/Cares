@{
    ViewBag.Title = Cares.Web.Resources.BusinessPartner.MarketingChannel.MarketingChannelLabel;
}
<div class="row" id="MarketingChannelBinding">

    <div class="row " data-bind="visible: !isMarketingChannelEditorVisible()">
        <h3 class="page-header float-left pageHeaderSection">@Cares.Web.Resources.BusinessPartner.MarketingChannel.MarketingChannelLabel</h3>
        <div class="header-toolsSection">
            <a href="#" class="label label-default create-new-icon" data-bind="click: onCreateForm" title="@Cares.Web.Resources.Shared.Common.CreateNew">@Cares.Web.Resources.Shared.Common.New</a>
            <a href="#" class="glyphicon glyphicon-filter " data-bind="visible: !filterSectionVisilble(), click: showFilterSection" title="@Cares.Web.Resources.Shared.Common.ShowFilter" style="display: none"></a>
        </div>
    </div>
    <div class="row searchFilterSection" data-bind="visible: !isMarketingChannelEditorVisible() && filterSectionVisilble()" style="display: none">
        <div class="well">
            <form class="form-horizontal">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="@("<" + Cares.Web.Resources.BusinessPartner.MarketingChannel.Search + ">")" data-bind="value: searchFilter" />
                </div>

                <button type="submit" class="btn btn-success" data-bind="click: search">@Cares.Web.Resources.Shared.Common.Search</button>
                <button type="submit" class="btn btn-default" data-bind="click:resetResuults">@Cares.Web.Resources.Shared.Common.Reset</button>
                <a href="#" class="glyphicon glyphicon-resize-small float-right collapse-filter" data-bind="click:hideFilterSection" title="@Cares.Web.Resources.Shared.Common.HideSection"></a>
            </form>
        </div>
    </div>
    <div class="row searchFilterResultSection" data-bind="visible: !isMarketingChannelEditorVisible()">
        <div class="well">
            <table id="MarketingChannelTable" class="table table-condensed">
                <thead>
                    <tr>
                        <th class="MarketingChannelCode"> <span id="1">@Cares.Web.Resources.BusinessPartner.MarketingChannel.Code<span class="icon-up"></span></span></th>
                        <th class="MarketingChannelName"> <span id="2">@Cares.Web.Resources.BusinessPartner.MarketingChannel.Name<span></span></span></th>
                        <th class="MarketingChannelDiscription"> <span>@Cares.Web.Resources.BusinessPartner.MarketingChannel.Description<span></span></span></th>
                        <th> <span></span></th>
                        <th> <span></span></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- ko template: { name: 'MarketingChannelFilterResultTemplate' , foreach: marketingChannels } -->
                    <!-- /ko -->
                </tbody>
            </table>
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </div>
    <script id="deleteActionMarketingChannelTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onDeleteItem" title="@Cares.Web.Resources.Shared.Common.Delete"><span class="glyphicon glyphicon-remove"></span></a>
    </script>

    <script id="editActionMarketingChannelTemplate" type="text/html">
        <a href="#" data-bind="click: $root.onEditItem" title="@Cares.Web.Resources.Shared.Common.Edit"><span class="glyphicon glyphicon-edit"></span></a>
    </script>
    <script id="MarketingChannelFilterResultTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionMarketingChannelTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionMarketingChannelTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    @Html.Partial("_MarketingChannelEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
{
    <script type="text/javascript">
        require(["marketingChannel/marketingChannel.view", "common/confirmation.view"]);
    var ist = window.ist;
    @{
        <text>
        ist.resourceText.MarketingChannelSuccessfullySavedMessage = '@Cares.Web.Resources.BusinessPartner.MarketingChannel.MarketingChannelSuccessfullySavedMessage';
        ist.resourceText.FailedToSaveMarketingChannelError = '@Cares.Web.Resources.BusinessPartner.MarketingChannel.FailedToSaveMarketingChannelError';
        ist.resourceText.FailedToLoadMarketingChannelsError = '@Cares.Web.Resources.BusinessPartner.MarketingChannel.FailedToLoadMarketingChannelsError';
        ist.resourceText.MarketingChannelSuccessfullyDeletedMessage = '@Cares.Web.Resources.BusinessPartner.MarketingChannel.MarketingChannelSuccessfullyDeletedMessage';
        ist.resourceText.FailedToDeleteMarketingChannelError = '@Cares.Web.Resources.BusinessPartner.MarketingChannel.FailedToDeleteMarketingChannelError';
        </text>
       }
    </script>

}
